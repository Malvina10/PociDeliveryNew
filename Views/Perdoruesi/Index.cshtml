@model IEnumerable<Perdoruesi>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista e përdoruesve</h1>
<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
           @foreach(var perdorues in Model)
            {
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-text">@perdorues.Username</h4>
                        <p class="card-text">@perdorues.Emri @perdorues.Mbiemri</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Detajet</button>
                            </div>
                            <small class="text-body-secondary">@perdorues.Roli?.EmerRoli</small>
                        </div>
                    </div>
                </div>
            </div>
            }
           
        </div>
    </div>
</div>
