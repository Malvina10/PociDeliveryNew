@{
}

<h1 class="text-left mb-4">Përdoruesit</h1>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var perdorues in Model)
            {
                <div class="col">
                    <div class="card shadow-lg h-100 border-0">
                        <div class="card-body p-4">
                            <h4 class="card-title text-primary">@perdorues.Username</h4>
                            <p class="card-text mb-2 text-muted">@perdorues.Emri @perdorues.Mbiemri</p>
                            <hr>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Perdoruesi" asp-action="DetajetPerdorues" asp-route-id="@perdorues.IDPerdoruesi" class="btn btn-sm btn-primary">Detajet</a>
                                </div>
                                <span class="badge bg-secondary">@perdorues.Roli?.EmerRoli</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>