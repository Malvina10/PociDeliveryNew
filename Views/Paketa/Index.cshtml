@model IEnumerable<Paketa>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1 class="text-left mb-4">Paketat</h1>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var paketa in Model)
            {
                <div class="col">
                    <div class="card shadow-lg h-100 border-0">
                        <div class="card-body p-4">
                            <h4 class="card-title text-primary">Barcode: @paketa.Barcode</h4>
                            <h6 class="card-subtitle mb-2 text-muted">Destinacioni: @paketa.PikaPostareFund?.Pikapostare</h6>
                            <hr>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Paketa" asp-action="DetajetPaketa" class="btn btn-sm btn-primary">Shiko detajet</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
