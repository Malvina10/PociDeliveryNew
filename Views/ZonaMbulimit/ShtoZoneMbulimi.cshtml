@{
}


<h1 class="text-center mb-4">Shto Zonë Mbulimi</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <form method="post" asp-for="ShtoPikePostare">
                        <div class="mb-3">
                            <label asp-for="Zona" class="form-label">Zona e mbulimit:</label>
                            <input asp-for="Zona" class="form-control" placeholder="Vendosni zonën postare">
                            <span asp-validation-for="Zona" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="IDPikaPostare" class="form-label">Zgjidhni pikën postare për sportelistin:</label>
                            <select asp-for="IDPikaPostare" id="IDPikaPostare" name="IDPikaPostare" class="form-control">
                                <option value="">--Zgjidhni pikën postare--</option>
                                @foreach (var item in ViewBag.PikatSelectList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="IDPikaPostare" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Statusi i pikës postare:</label>
                            <div class="form-check">
                                <input asp-for="Statusi" type="radio" class="form-check-input" id="statusHapur" value="1" />
                                <label class="form-check-label" for="statusHapur">Hapur</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Statusi" type="radio" class="form-check-input" id="statusMbyllur" value="0" />
                                <label class="form-check-label" for="statusMbyllur">Mbyllur</label>
                            </div>
                            <span asp-validation-for="Statusi" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Data:</label>
                            <input asp-for="CreatedOn" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="CreatedOn" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Ruaj</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
